// Specialized tsconfig for type-checking js files
{
	"extends": "./tsconfig.json",
	"compilerOptions": {},
	"include": [
		"**/*.js",
		"**/*.d.ts"
	],
	"exclude": [
		"**/build",
		"node_modules/",
		"widgets/",
        "node_modules/**",
        "src-admin/**/*",
        "src/**/*",
        "admin/**/*",
        "node_modules/**/*",
        "test/**/*",
        "build/**/*",
        "tasks.js",
        "tmp/**/*",
        ".**/*",
        ".dev-server/",
        ".vscode/",
        "*.test.js",
        "test/**/*.js",
        "*.config.mjs",
        "build",
        "admin/build",
        "admin/words.js",
        "admin/admin.d.ts",
        "**/adapter-config.d.ts",
	]
}