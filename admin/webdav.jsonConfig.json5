{
    "type": "panel",
    "label": "WebDAV",
    "items": {
        "_checkConfig": {
            // this component is not visible in the UI
            // it checks the configuration
            "type": "custom",
            "i18n": true,
            "url": "custom/customComponents.js",
            "name": "ConfigCustomBackItUpSet/Components/CheckAllConfigInvisible"
        },
        "_header": {
            "type": "header",
            "size": 2,
            "text": "WebDAV",
            "sm": 12,
        },
        "webdavURL": {
            "newLine": true,
            "xs": 12,
            "sm": 9,
            "md": 6,
            "lg": 3,
            "type": "text",
            "label": "WebDAV URL",
        },
        "webdavUsername": {
            "newLine": true,
            "xs": 12,
            "sm": 9,
            "md": 6,
            "lg": 3,
            "type": "text",
            "label": "Username",
        },
        "webdavPassword": {
            "xs": 12,
            "sm": 9,
            "md": 6,
            "lg": 3,
            "type": "password",
            "visible": true,
            "label": "Password",
        },
        "_testConnection": {
            "newLine": true,
            "variant": "contained",
            "color": "primary",
            "disabled": "!_alive",
            "type": "sendTo",
            "error": {
                "connect timeout": "Connection timeout"
            },
            "icon": "data:image/svg+xml;base64,",
            "command": "testWebDAV",
            "jsonData": "{\"config\": {\"host\": \"${data.webdavURL}\", \"username\": \"${data.webdavUsername}\", \"password\": \"${data.webdavPassword}\", \"signedCertificates\": \"${data.webdavSignedCertificates}\"}}",
            "label": "Test connection"
        },
        "webdavSignedCertificates": {
            "newLine": true,
            "type": "checkbox",
            "label": "Allow only signed certificates",
            "xs": 12,
            "sm": 9,
            "md": 6,
            "lg": 3,
        },
        "webdavDeleteOldBackup": {
            "type": "checkbox",
            "label": "Delete old WebDAV-Backups",
            "xs": 12,
            "sm": 9,
            "md": 6,
            "lg": 3,
        },
        "webdavDeleteAfter": {
            "newLine": true,
            "hidden": "!data.webdavDeleteOldBackup || !data.advancedDelete",
            "xs": 12,
            "sm": 9,
            "md": 6,
            "lg": 3,
            "min": 1,
            "max": 100,
            "type": "number",
            "label": "piece",
            "help": "Delete old ioBroker backups with the exception of the last X pieces"
        },
        "webdavOwnDir": {
            "newLine": true,
            "type": "checkbox",
            "label": "Extra path for backup types",
            "xs": 12,
            "sm": 9,
            "md": 6,
            "lg": 3,
        },
        "webdavMinimalDir": {
            "hidden": "!data.webdavOwnDir",
            "xs": 12,
            "sm": 9,
            "md": 6,
            "lg": 3,
            "type": "text",
            "label": "Path for ioBroker backup",
            "newLine": true
        },
        "webdavCcuDir": {
            "hidden": "!data.webdavOwnDir",
            "xs": 12,
            "sm": 9,
            "md": 6,
            "lg": 3,
            "type": "text",
            "label": "Path for CCU backup",
        },
        "webdavDir": {
            "hidden": "data.webdavOwnDir",
            "xs": 12,
            "sm": 9,
            "md": 6,
            "lg": 3,
            "type": "text",
            "label": "Path",
            "newLine": true
        }
    }
}
