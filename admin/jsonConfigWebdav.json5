{
  "type": "panel",
  "label": "WebDAV",
  "items": {
    "_checkConfig": {
      // this component is not visible in the UI
      // it checks the configuration
      "type": "custom",
      "i18n": true,
      "url": "custom/customComponents.js",
      "name": "ConfigCustomBackItUpSet/Components/CheckAllConfigInvisible"
    },
    "_header": {
      "type": "header",
      "size": 2,
      "text": "WebDAV",
      "sm": 12,
    },
    "webdavURL": {
      "newLine": true,
      "sm": 9,
      "md": 6,
      "lg": 3,
      "type": "text",
      "label": "URL",
      "help": "WebDAV URL"
    },
    "webdavUsername": {
      "newLine": true,
      "sm": 9,
      "md": 6,
      "lg": 3,
      "type": "text",
      "label": "Username",
      "help": "Username"
    },
    "webdavPassword": {
      "sm": 9,
      "md": 6,
      "lg": 3,
      "type": "password",
			"visible": true,
      "label": "Password",
      "help": "Password"
    },
    "_testConnection": {
      "newLine": true,
      "variant": "contained",
      "color": "primary",
      "disabled": "!_alive",
      "type": "sendTo",
      "error": {
        "connect timeout": "Connection timeout"
      },
      "icon": "data:image/svg+xml;base64,",
      "command": "testWebDAV",
      "jsonData": "{\"config\": {\"host\": \"${data.webdavURL}\", \"username\": \"${data.webdavUsername}\", \"password\": \"${data.webdavPassword}\", \"signedCertificates\": \"${data.webdavSignedCertificates}\"}}",
      "label": "Test connection"
    },
    "webdavSignedCertificates": {
      "newLine": true,
      "type": "checkbox",
      "label": "Allow only signed certificates",
      "sm": 9,
      "md": 6,
      "lg": 3,
    },
    "webdavDeleteOldBackup": {
      "type": "checkbox",
      "label": "Delete old WebDAV-Backups",
      "sm": 9,
      "md": 6,
      "lg": 3,
    },
    "webdavOwnDir": {
      "newLine": true,
      "type": "checkbox",
      "label": "Extra path for backup types",
      "sm": 9,
      "md": 6,
      "lg": 3,
    },
    "webdavMinimalDir": {
      "hidden": "!data.webdavOwnDir",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "text",
      "label": "Path for iobroker backup",
      "help": "Path for iobroker backup",
      "newLine": true
    },
    "webdavCcuDir": {
      "hidden": "!data.webdavOwnDir",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "text",
      "label": "Path for CCU backup",
      "help": "Path for CCU backup"
    },
    "webdavDir": {
      "hidden": "data.webdavOwnDir",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "text",
      "label": "path",
      "help": "path",
      "newLine": true
    }
  }
}
